<?xml version="1.0"?>
  <PropertyList> 
    <path>landingswitch.ac</path>

 <animation>
  <type>pick</type>
  <visible>true</visible>
  <object-name>LandOn</object-name>
  <action>
   <button>0</button>
   <repeatable>false</repeatable>
   <binding>
    <command>property-assign</command>
    <property>controls/lighting/landing-lights</property>
    <value type="bool">true</value>
   </binding>          
  </action>
 </animation>

 <animation>
  <type>pick</type>
  <visible>true</visible>
  <object-name>LandOff</object-name>
  <action>
   <button>0</button>
   <repeatable>false</repeatable>
   <binding>
    <command>property-assign</command>
    <property>controls/lighting/landing-lights</property>
    <value type="bool">false</value>
   </binding>          
  </action>
 </animation>

<!-- <property>controls/switches/nav-light</property> -->

 <animation> 
  <type>rotate</type>
  <object-name>LandSwitch</object-name>
  <property>controls/lighting/landing-lights</property>
  <factor>30</factor>
  <axis> 
   <x>0</x>
   <y>-1</y>
   <z>0</z>
  </axis>
  <center>
   <x-m>0.00</x-m>
   <y-m>0</y-m>
   <z-m>0.0</z-m>  
  </center>
 </animation>
    

	<!-- *** LoD *** -->
    <animation> 
      <type>range</type>
      <min-m>0</min-m>
      <max-m>25</max-m>
    </animation>
	
  </PropertyList>
